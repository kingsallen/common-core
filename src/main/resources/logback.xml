<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <!--<property name="LOG_HOME" value="/var/log/www/alphacloud" />-->
    <property name="LOG_HOME" value="/var/log/www/alphacloud"/>
    <springProperty scope="context" name="spring.application.name" source="spring.application.name"/>
    <springProperty scope="context" name="redis.elk.host" source="redis.elk.host"/>
    <springProperty scope="context" name="redis.elk.port" source="redis.elk.port"/>


    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>[%X{customTraceId}][%X{X-B3-TraceId}] %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] ${spring.application.name} %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 按照每天生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/${spring.application.name}.log.%d{yyyy-MM-dd}</FileNamePattern>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>[%X{customTraceId}][%X{X-B3-TraceId}] %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] ${spring.application.name} %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="LOGSTASH" class="com.cwbase.logback.RedisAppender">
        <additionalField>
            <key>url</key>
            <value>%X{url}</value>
        </additionalField>
        <additionalField>
            <key>method</key>
            <value>%X{method}</value>
        </additionalField>
        <additionalField>
            <key>timeConsume</key>
            <value>%X{timeConsume}</value>
        </additionalField>
        <additionalField>
            <key>application</key>
            <value>${spring.application.name}</value>
        </additionalField>
        <additionalField>
            <key>customTraceId</key>
            <value>%X{customTraceId}</value>
        </additionalField>
        <additionalField>
            <key>X-B3-TraceId</key>
            <value>%X{X-B3-TraceId}</value>
        </additionalField>
        <additionalField>
            <key>msg</key>
            <value>%msg%n</value>
        </additionalField>
        <host>${redis.elk.host}</host>
        <port>${redis.elk.port}</port>
        <key>log_301_debug</key>
        <database>0</database>
    </appender>

    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <appender-ref ref="LOGSTASH" />
    </appender>

    <logger name="*" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ASYNC_LOGSTASH" />
    </logger>

    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ASYNC_LOGSTASH" />
    </root>
</configuration>